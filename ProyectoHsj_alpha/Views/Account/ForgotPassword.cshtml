@model ProyectoHsj_alpha.ViewsModels.ForgotPasswordViewModel

@{
    Layout = null;
    ViewData["Title"] = "Olvidaste tu contraseña";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color:black;
        
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        color: white; /* Color de texto */
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.7); /* Fondo semi-transparente */
        padding: 30px;
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5); /* Sombra */
        width: 100%;
        max-width: 400px; /* Ancho máximo del contenedor */
        text-align: center; /* Centrar texto */
    }

    .btn {
        width: 100%; /* Botón ocupa todo el ancho */
    }
</style>

<!-- Incluyendo Bootstrap -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="form-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send Password Reset Link</button>
    </form>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="text-white">Back to Login</a>
    </div>
</div>
